apiVersion: v1
kind: Service
metadata:
  name: service
spec:
  selector:
    app: vaultwarden
  ports:
    - port: 80
      targetPort: 80
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: deployment
  labels:
    app: vaultwarden
spec:
  replicas: 1
  selector:
    matchLabels:
      app: vaultwarden
  template:
    metadata:
      labels:
        app: vaultwarden
    spec:
      containers:
        - name: vaultwarden
          image: "docker.ocf.berkeley.edu/vaultwarden:<%= version %>"
          envFrom:
            - secretRef:
                name: vaultwarden-secret
          volumeMounts:
            - mountPath: "/data"
              name: vaultwarden-data
          resources:
            limits:
              memory: 1024Mi
              cpu: 1
          ports:
            - containerPort: 80
          env:
      volumes:
        - name: vaultwarden-data
          emptyDir: {}
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: virtual-host-ingress
spec:
  rules:
    - host: vaultwarden.ocf.berkeley.edu
      http:
        paths:
          - backend:
              serviceName: service
              servicePort: 80
---
apiVersion: v1
kind: Secret
metadata:
  name: vaultwarden-secret
type: Opaque
stringData:
  ADMIN_TOKEN: <%= vaultwarden_admin_token %>
  DATABASE_URL: postgresql://ocfvaultwarden:<%= vaultwarden_postgres_password %>@postgres.ocf.berkeley.edu/ocfvaultwarden
  DOMAIN: https://vaultwarden.ocf.berkeley.edu
  SIGNUPS_ALLOWED: "false"
